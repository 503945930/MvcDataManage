<script type="text/javascript">
    $(function () {
        $.ajax({
            url: "/Home/IsNotNull",
            dataType: "json",
            async: false,
            success: function (data) {
                //alert("1234");
                if (data.length != 0) {

                    $.each(data, function (index, content) {
                        //alert(content['ResNmae']);

                        $("#" + content["CabinetIId"]).css("background", "#7fffd4");
                        // alert(content["CabinetIId"]);
                    });

                }
                // html.appendTo('#evidence');


            }
        });



        //给柜子绑定点击事件
        //alert("123");
        $('.center dl dd a').click(function () {
            // var num = event.srcElement.innerText;
            var num = $(this).context.dataset.place;
            console.log(num);
            $.ajax({
                url: "/Home/OpenCab?cabinet=" + num,
                dataType: "json",
                async: false,
                success: function (data) {
                    //alert("1234");
                    if (data.length != 0) {
                        $('#evidence').empty();
                        var html = '';
                        $.each(data, function (index, content) {
                            //alert(content['ResNmae']);
                            html += " <a href='/Home/Data/" + content['ResID'] + "'>" + content['ResNmae'] + "</a>";
                           
                            //html += " <a href='/Data/Add?Resid=" + num + "'>" + "录入数据" + "</a>";
                            //$('#evidence').html(html);
                            //alert(content["ResNmae"]);                      
                        });
                        html += " <a href='/Data/Add?Resid=" + num + "' style='margin-left:350px'>" + "录入数据" + "</a>";
                        $('#evidence').html(html);
                    } else {
                        var html = '';
                        html += " <a href='/Data/Add?Resid=" + num + "'>" + "录入数据" + "</a>";
                        $('#evidence').html(html);
                    }
                    // html.appendTo('#evidence');


                }
            });
        });


    })
</script>
