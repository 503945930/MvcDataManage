@using MvcDataManage.Models
@{
    ViewBag.Title = "DataSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    function  Query(parameters) {
        //$.get({
        //    url: "/Home/DataSearch?queryCondition=" + $('#txQuery').val()
        //});
        location.href = "/Home/DataSearch?queryCondition=" + $('#txQuery').val();
        //  alert($('#txQuery').val());
    }
</script>
@*<h2>DataEnter</h2>*@
<div class="input-append">
    <p>案件名称/物证名称/犯罪嫌疑人姓名： 
     <input type="text" id="txQuery" class="span2 search-query" value="@ViewBag.Select">
    <button type="submit" class="btn" onclick="Query();">搜索</button></p>
    
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">查询结果</h3>
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-hover table-striped ">
            <thead>
                <tr>
                    <th>案件名称</th>
                    <th>物证名称</th>
                    <th>犯罪嫌疑人姓名</th>  
                     <th>转移状态</th>               
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
               @foreach (QueryModel a in @ViewBag.QueryModellist)
                {
                    <tr>
                        <td>@a.CaseName.Trim()</td>
                        <td>@a.ResNmae.Trim()</td>
                        <td>@a.SuspectName.Trim()</td>
                        <td>
                           @(a.BoolTansfe?"已移交":"未移交")
                        </td>
                        <td><a href="/Home/Data/@a.ResID"  >查看</a>
                            @*<a href="#" onclick="Del();">删除</a>*@
                        </td>
                    </tr>
                } 


            </tbody>
        </table>
    </div>
</div>