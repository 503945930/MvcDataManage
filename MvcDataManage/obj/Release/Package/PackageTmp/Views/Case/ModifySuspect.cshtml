@model DefaultConnection.ww_Suspect
@{
    ViewBag.Title = "ModifySuspect";
}

<h2>>>修改嫌疑人资料</h2>
<form class="form-horizontal" role="form" action="/Case/DoModifySuspect" method="POST" >
    <div class="form-group">
        <div class="form-group hidden ">
        <label  class="col-sm-2 control-label">嫌疑人ID</label>
        <div class="col-sm-10">
            <input type="text" class="form-control"  name="SuspectId" value="@Model.SuspectId"
                >
        </div>
    </div>
        <label  class="col-sm-2 control-label">姓名</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="SuspectName"  value="@Model.SuspectName"
                   placeholder="请输入姓名">
        </div>
    </div>
   <div class="form-group">
      <label  class="col-sm-2 control-label">性别</label>
      <div class="col-sm-10">
         <input type="text" class="form-control" name="SuspectSex"  value="@Model.SuspectSex"
            placeholder="请输入姓别">
      </div>
   </div>
    @*<div class="form-group">
        <label  class="col-sm-2 control-label">年龄</label>
        <div class="col-sm-10">
            <input type="text" class="form-control"  name="SuspectAge" value="@Model.SuspectAge"
                   placeholder="请输入年龄">
        </div>
    </div>*@
    <div class="form-group">
        <label  class="col-sm-2 control-label">地址</label>
        <div class="col-sm-10">
            <input type="text" class="form-control"  name="SuspectAdress" value="@Model.SuspectAdress"
                   placeholder="请输入籍贯">
        </div>
    </div>
     <div class="form-group">
        <label  class="col-sm-2 control-label">身份证号码</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="SuspectIdCard" value="@Model.SuspectIdCard"
                   placeholder="请输入身份证号码">
        </div>
    </div>
   <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">提交</button>
           <button type="submit" class="btn btn-default">取消</button>
      </div>
   </div>
</form>
